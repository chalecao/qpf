uniform vec3 spawnPosition;
uniform float elapsedTime;

varying vec2 vUv;

{{snoiseFragShader}}

void main(){
	vec2 p = vUv * 2.0 -1.0;

	float x = spawnPosition.x + snoise(50.0*p + elapsedTime) * 0.2;
	float y = spawnPosition.y + snoise(61.0*p + elapsedTime) * 0.2;
	float z = spawnPosition.z + snoise(72.0*p + elapsedTime) * 0.2;
	float t = snoise(83.0*p + elapsedTime) * 6.0+4.0;

	gl_FragColor = vec4(x/10.0, y/10.0, z/10.0, t);
}