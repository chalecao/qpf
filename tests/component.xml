<container width="@binding[windowWidth]" height="@binding[windowHeight]">
	<tab height="100%" actived="1">
		<panel title="Meta">
			<label>Button</label>
			<button name="button" onclick="@binding[clickHandler]"> click me!</button>
			<label>Checkbox</label>
			<checkbox checked="1" label="I am a checkbox"></checkbox>

			<label>TextField</label>
			<textfield text="Hi"></textfield>

			<label>Combobox</label>
			<combobox value="4">
				<item value="1">JavaScript</item>
				<item value="2">PHP</item>
				<item value="3">Ruby</item>
				<item value="4">Python</item>
			</combobox>

			<label>Spinner</label>
			<spinner value="20"></spinner>
		</panel>
		<panel title="Widget">
			<label>
				Spinner
			</label>
			<vector>
				<spinner value="@binding[vector.x]"></spinner>
				<spinner value="@binding[vector.y]"></spinner>
			</vector>
			<label>
				Range
			</label>
			<vector>
				<range value="100"></range>
				<range value="10"></range>
			</vector>
			<palette></palette>
		</panel>
		<panel title="VBox">
			<vbox height="400">
				<panel title="first" flex="1" style="margin:5px;"></panel>
				<panel title="second" flex="2" style="margin:5px;"></panel>
				<panel title="third" flex="2" style="margin:5px;"></panel>
			</vbox>
		</panel>
		<panel title="HBox">
			<hbox height="400" id="Hbox">
				<panel title="first" style="margin:5px;"></panel>
				<panel title="second" prefer="50" style="margin:5px;"></panel>
				<panel title="third" flex="2" style="margin:5px;"></panel>
			</hbox>
		</panel>
		<panel title="Canvas">
			<canvas width="1000" height="400" oninitialize="@binding[drawCanvas]"></canvas>
		</panel>
	</tab>
</container>