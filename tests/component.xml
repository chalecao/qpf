<window width="400" left="100" top="100" title="Components">
	<tab width="300">
		<panel title="Meta">
			<label>Button</label>
			<button name="button" onclick="@binding[clickHandler]"> click me!</button>
			<label>Checkbox</label>
			<checkbox checked="1" label="I am a checkbox"></checkbox>

			<label>TextField</label>
			<textfield text="Hi"></textfield>

			<label>Combobox</label>
			<combobox value="4">
				<item value="1">JavaScript</item>
				<item value="2">PHP</item>
				<item value="3">Ruby</item>
				<item value="4">Python</item>
			</combobox>

			<label>Spinner</label>
			<spinner value="20"></spinner>
		</panel>
		<panel title="Vector">
			<label>
				Spinner
			</label>
			<vector>
				<spinner value="@binding[vector.x]"></spinner>
				<spinner value="@binding[vector.y]"></spinner>
			</vector>
			<label>
				Range
			</label>
			<vector>
				<range value="100"></range>
				<range value="10"></range>
			</vector>
		</panel>
	</tab>
</window>